#include <stdio.h>

int main() {
    char sex[50];
    int i, boys = 0, girls = 0;

    printf("Enter sex code for 50 students (M/F):\n");
    for(i = 0; i < 50; i++) {
        scanf(" %c", &sex[i]);
        if(sex[i] == 'M' || sex[i] == 'm')
            boys++;
        else if(sex[i] == 'F' || sex[i] == 'f')
            girls++;
    }

    printf("Boys = %d\n", boys);
    printf("Girls = %d\n", girls);

    return 0;
}
