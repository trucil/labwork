#include <stdio.h>

int main() {
    int n, i, value, sum = 0;
    float mean;

    printf("Enter how many values: ");
    scanf("%d", &n);

    for(i = 0; i < n; i++) {
        printf("Enter value %d: ", i + 1);
        scanf("%d", &value);
        sum += value;
    }

    mean = sum / (float)n;

    printf("Sum = %d\n", sum);
    printf("Mean = %.2f\n", mean);

    return 0;
}
